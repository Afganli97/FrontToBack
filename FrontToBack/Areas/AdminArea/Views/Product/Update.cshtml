@model Product
@{
    ViewData["Title"] = "Update";
}


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Horizontal Form</h4>
            <p class="card-description"> Horizontal form layout </p>
            <form method="post" class="forms-sample">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" value="@Model.Name">
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-3 col-form-label">Price</label>
                    <div class="col-sm-9">
                        <input asp-for="Price" class="form-control" value="@Model.Price">
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Count" class="col-sm-3 col-form-label">Count</label>
                    <div class="col-sm-9">
                        <input asp-for="Count" class="form-control" value="@Model.Count">
                    </div>
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Images.FirstOrDefault(x=>x.IsMain).Photo" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Images.FirstOrDefault(x=>x.IsMain).Photo" class="form-control" accept="image/*">
                    </div>
                    <span asp-validation-for="Images.FirstOrDefault(x=>x.IsMain).Photo" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-action="index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
