@model List<Slider>
@{
    ViewData["Title"] = "Index";
}
<p>Lorem</p>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                <a asp-action="create" class="btn btn-outline-success">Add Slider</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Slider</th>
                        <th> Settings </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="~/img/@item.ImageUrl"/></td>
                            <td>
                                <a asp-action="info" asp-route-id="@item.Id" class="btn btn-outline-primary">Info</a>
                                <a asp-action="update" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>